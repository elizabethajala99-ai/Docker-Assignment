# Example Environment Configuration for Cloudboosta WordPress
# Copy this file to .env and customize the values

# Database Configuration
MYSQL_DATABASE=wordpress
MYSQL_USER=wordpress
MYSQL_PASSWORD=your_secure_password_here
MYSQL_ROOT_PASSWORD=your_root_password_here

# WordPress Configuration
WORDPRESS_DB_HOST=db
WORDPRESS_DB_NAME=wordpress
WORDPRESS_DB_USER=wordpress
WORDPRESS_DB_PASSWORD=your_secure_password_here

# WordPress Admin Setup
WORDPRESS_TITLE=Cloudboosta - Leading Cloud Services
WORDPRESS_ADMIN_USER=admin
WORDPRESS_ADMIN_PASSWORD=your_admin_password_here
WORDPRESS_ADMIN_EMAIL=admin@cloudboosta.com
WORDPRESS_URL=http://localhost:8080

# Container Configuration
WORDPRESS_PORT=8080
MYSQL_VERSION=8.0
WORDPRESS_VERSION=latest

# AWS Configuration (for EC2 deployment)
AWS_REGION=eu-west-2
AWS_LOG_GROUP=cloudboosta-wordpress